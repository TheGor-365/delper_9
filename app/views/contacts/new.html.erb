<h1>
  Contact us
</h1>

<div class="border bg-light rounded p-5 mt-5 col-md-8">
  <%= form_for :contact, url: contacts_path do |f| %>

    <% if @contact && @contact.errors.any? %>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    <% end %>

    <%= f.label :email %>
    <%= f.text_field :email, value: current_user.email, class: 'form-control mb-3' %>

    <%= f.label :message %>
    <%= f.text_area :message, rows: '6', autofocus: true, class: 'form-control mb-3' %>

    <%= f.submit 'Send message', class: 'btn btn-primary btn-sm mt-2' %>

  <% end %>
</div>
